# Find the maximum absolute value of age in your dataset
max_abs_age <- max(abs(your_age_data))

# Value to be normalized
age_value <- 35

# Decimal scaling normalization formula
normalized_age <- age_value / (10 ^ ceiling(log10(max_abs_age)))
